<table class="table table-striped">
    <thead>
        <tr>
            <th>タスク</th>
            <th>進捗</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
            <td><%= link_to "編集" , edit_task_path(task.id), class: 'btn btn-secondary btn-sm' %></td>
            <td><%= link_to "削除", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
</table>